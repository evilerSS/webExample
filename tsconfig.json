{
  "compilerOptions": {
    // module配置很重要，千万不能配置成commonjs，热加载会失效
    "module": "es2015",
    "noImplicitAny": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "target": "es5",
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "inlineSources": false,
    "lib": ["es2015", "DOM"]
  },
  "exclude": [
    "node_modules"
  ]
}